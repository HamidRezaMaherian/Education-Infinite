@page
@model Edu_Infinite.Apps.Admin.Pages.Courses.InsertModel

<div class="d-flex flex-column flex-column-fluid">
    <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
        <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
            <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">تعریف دوره جدید</h1>
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    <li class="breadcrumb-item text-muted">
                        <a asp-page="Index" class="text-muted text-hover-primary">خانه</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-500 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">
                        <a asp-page="List" class="text-muted text-hover-primary">مدیریت دوره‌ها</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-500 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">تعریف دوره جدید</li>
                </ul>
            </div>
        </div>
    </div>
    <div id="kt_app_content" class="app-content flex-column-fluid">
        <div id="kt_app_content_container" class="app-container container-xxl">
            <div class="card">
                <div class="card-body py-4">
                    <form method="post" enctype="multipart/form-data" class="form">
                        <div class="row g-9 mb-8">
                            <div class="col-md-6 fv-row">
                                <label class="d-flex align-items-center fs-6 fw-semibold mb-2">
                                    <span class="required">نام دوره</span>
                                </label>
                                <input asp-for="Course.Name" class="form-control form-control-solid" placeholder="نام دوره را وارد کنید" />
                                <span asp-validation-for="Course.Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 fv-row">
                                <label class="d-flex align-items-center fs-6 fw-semibold mb-2">
                                    <span class="required">دسته‌بندی</span>
                                </label>
                                <select asp-for="Course.CategoryId" class="form-select form-select-solid">
                                    <option value="">انتخاب دسته‌بندی...</option>
                                    @foreach (var category in Model.Categories)
                                    {
                                        <option value="@category.Value">@category.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="Course.CategoryId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row g-9 mb-8">
                            <div class="col-md-6 fv-row">
                                <label class="d-flex align-items-center fs-6 fw-semibold mb-2">
                                    <span class="required">توضیح کوتاه</span>
                                </label>
                                <textarea asp-for="Course.ShortDescription" class="form-control form-control-solid" placeholder="توضیح کوتاه وارد کنید"></textarea>
                                <span asp-validation-for="Course.ShortDescription" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 fv-row">
                                <label class="d-flex align-items-center fs-6 fw-semibold mb-2">
                                    <span class="required">سطح مهارت</span>
                                </label>
                                <select asp-for="Course.Level" class="form-select form-select-solid">
                                    <option value="0">مبتدی</option>
                                    <option value="1">متوسط</option>
                                    <option value="2">پیشرفته</option>
                                </select>
                                <span asp-validation-for="Course.Level" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row g-9 mb-8">
                            <div class="col-md-12 fv-row">
                                <label class="d-flex align-items-center fs-6 fw-semibold mb-2">
                                    <span class="required">توضیحات کامل</span>
                                </label>
                                <textarea asp-for="Course.Description" class="form-control form-control-solid" placeholder="توضیحات کامل وارد کنید"></textarea>
                                <span asp-validation-for="Course.Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row g-9 mb-8">
                            <div class="col-md-6 fv-row">
                                <label class="d-flex align-items-center fs-6 fw-semibold mb-2">
                                    <span class="required">قیمت</span>
                                </label>
                                <input asp-for="Course.FullPrice" class="form-control form-control-solid" type="number" placeholder="قیمت را وارد کنید" />
                                <span asp-validation-for="Course.FullPrice" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 fv-row">
                                <label class="fs-6 fw-semibold mb-2">تصویر اصلی</label>
                                <input asp-for="Course.MainImage" class="form-control form-control-solid" type="file" />
                                <span asp-validation-for="Course.MainImage" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row g-9 mb-8">
                            <div class="col-md-12 fv-row">
                                <label class="fs-6 fw-semibold mb-2">ویدئوی معرفی</label>
                                <input asp-for="Course.IntroVideo" class="form-control form-control-solid" type="file" />
                                <span asp-validation-for="Course.IntroVideo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">
                                <span class="indicator-label">ثبت</span>
                                <span class="indicator-progress">
                                    لطفاً صبر کنید...
                                    <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                </span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
